{
  "env": {
    "browser": true,
    "es2021": true
  },
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": [
    "eslint:recommended",
    "next"
  ],
  "rules": {
    "@next/next/no-img-element": 0,
    "react-hooks/exhaustive-deps": 0,
    "react/no-unescaped-entities": 0
  }
}